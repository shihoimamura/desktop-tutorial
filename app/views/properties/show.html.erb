<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent.to_s(:delimited) if !@property.rent.blank? %><%= "円" if !@property.rent.blank? %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.old.to_s(:delimited) if !@property.old.blank? %><%= "年" if !@property.old.blank? %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remark %>
</p>

<hr>

<% @property.stations.each_with_index do |station, index| %>
  <h2>最寄駅<%= index + 1 %></h2>
  <p>
    <strong>路線名:</strong>
    <%= station.line_name %>
  </p>
  <p>
    <strong>駅名:</strong>
    <%= station.name %>
  </p>
  <p>
    <strong>徒歩分数:</strong>
    <%= station.minute.to_s(:delimited) if !station.minute.blank? %><%= "分" if !station.minute.blank? %>
  </p>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
