<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "物件名" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent, "賃料" %>
    <%= form.number_field :rent %>円
  </div>

  <div class="field">
    <%= form.label :address, "住所" %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :old, "築年数" %>
    <%= form.number_field :old %>年
  </div>

  <div class="field">
    <%= form.label :remark, "備考" %>
    <%= form.text_area :remark %>
  </div>

  <hr>

  <% i = 1 %>
  <%= form.fields_for :stations do |station| %>
    <h2>最寄駅<%= i %></h2>
    <div class="field">
      <%= station.label :line_name, "路線名" %>
      <%= station.text_field :line_name %>
    </div>
    <div class="field">
      <%= station.label :name, "駅名" %>
      <%= station.text_field :name %>
    </div>
    <div class="field">
      <%= station.label :minute, "徒歩分数" %>
      <%= station.number_field :minute %>分
    </div>
    <% i = i + 1 %>
  <% end %>

  <div class="actions">
    <%= form.submit("登録する") if action_name == "new" %>
    <%= form.submit("更新する") if action_name == "edit" %>
  </div>
<% end %>
